<?xml version="1.0" encoding="UTF-8"?>
<extension type="template" client="site">
    <name>joomla-skeleton</name>
    <version>1.0</version>
    <creationDate>2025-01</creationDate>
    <author>Projetos de Software</author>
    <authorEmail>contato@projetosdesoftware.com.br</authorEmail>
    <copyright>(C) 2025 Projetos de Software</copyright>
    <description>JOOMLA_TPL_SKELETON_DESCRIPTION</description>
    <inheritable>1</inheritable>

    <scriptfile>script.php</scriptfile>

    <files>
        <filename>index.php</filename>
        <filename>joomla.asset.json</filename>
        <filename>templateDetails.xml</filename>
    </files>

    <media destination="templates/site/skeleton" folder="media">
        <folder>js</folder>
        <folder>css</folder>
        <folder>scss</folder>
        <folder>images</folder>
    </media>

    <languages folder="language">
        <language tag="pt-BR">pt-BR/tpl_skeleton.ini</language>
        <language tag="pt-BR">pt-BR/tpl_skeleton.sys.ini</language>
    </languages>

    <positions>
        <position>header</position>
		<position>footer</position>
		<position>sidebar</position>
		<position>search</position>
		<position>breadcrumbs</position>
		<position>menu</position>
		<position>content-top</position>
    </positions>

    <config>
        <fields name="params">
            <fieldset name="parametros">
                <field
                    name="testparam"
                    type="radio"
                    label="JOOMLA_SKELETON_TPL_TESTLABEL"
                    default="1"
                    layout="joomla.form.field.radio.switcher"
                    filter="boolean"
                >
                    <option value="0">JNO</option>
                    <option value="1">JYES</option>
                </field>
            </fieldset>
        </fields>
    </config>

</extension>